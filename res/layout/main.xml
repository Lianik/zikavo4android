<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">
    <ImageView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/logo"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="47dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:text="Don't touch the droid"
            android:id="@+id/message" android:layout_gravity="center_horizontal|top" android:textSize="20dp"
            android:textIsSelectable="false" android:paddingTop="10dp"
            android:layout_centerHorizontal="true" android:layout_below="@+id/imageView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@id/textViewDownloaded" android:layout_gravity="center"/>
</LinearLayout>